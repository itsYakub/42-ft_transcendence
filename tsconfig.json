{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "ES2021",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": false
	},
	"types": [
        "babylonjs"
    ]
}
